<h2><%= t('login.new_login') %></h2>

<%= form_for(:session, url: session_path) do |f| %>
  <div class="field mb-3 mt-3">
    <%= f.email_field :admin_email, autofocus: true, autocomplete: "email", class: "form-control",
    value: "admin@admin", placeholder: t('register.email') %>
  </div>

  <div class="field mb-3 mt-3">
    <%= f.password_field :admin_password, autocomplete: "password",
      class: "form-control", value: "admin", placeholder: t('register.password') %>
  </div>

  <div class="actions mb-3">
    <%= f.submit t('login.login_btn'), class: :"btn btn-primary" %>
    <%= link_to t('login.register_link'), session_path %>
  </div>
<% end %>
