.release-show-container {
  margin-top: 1rem;
  width: 90%;
  padding: 1rem;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 5px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  column-gap: 1rem;
  color: var(--a-color);
}

.release-show-container ul {
  list-style-type: none;
}

.release-show-container a {
  color: #ffffff;
  cursor: pointer;
}

.release-show-container a.play-track:hover {
}

.release-show-cover img {
  max-width: 500px;
  max-height: 500px;
}

@media (max-width: 500px) {
  .release-show-container {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .release-show-cover img {
    width: 15rem;
    height: 15rem;
  }

  .release-show-cover {
    order: -1;
  }

  .release-show-container {
    margin-bottom: 3rem;
  }
}

