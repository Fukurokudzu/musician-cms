html, body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
}

body {
    background-image: url(<%= asset_path('korg.jpg') %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
}

main {
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 0 !important;
    padding-right: 0 !important;
}

a {
    color: <%= Setting.links_color %>;
    text-decoration: none !important;
}

.main-header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 3rem;
    background-color: <%= Setting.main_menu_bg_color %>;
    top: 0;
    left: 0;
    z-index: 1000;
}

.artist-title a {
    font-size: 1.5rem;
    font-weight: bold;
    color: <%= Setting.artist_title_color %>;
    padding-left: 1rem;
}

.releases-container {
    margin-top: 1rem;
    width: 90%;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 5px;
    display: grid;
    row-gap: 1rem;
    column-gap: 1rem;
    grid-template-columns: repeat(4, minmax(15rem, 1fr));
    grid-auto-flow: dense;
    border-right: solid 3px <%= Setting.accent_color %>;
}

.cover {
    width: 15rem;
    height: 15rem;
}

#footer {
    margin-top: auto;
}

#player {
    width: 100%;
    background-color: <%= Setting.player_bg_color %>;
    padding: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
}

#music-player {
    width: 90%;
}

audio::-webkit-media-controls-panel {
    background-color: <%= Setting.player_bg_color %>;
    border-radius: 5px;
    color: #FFF;
    border: none;
}

audio {
    color: <%= Setting.links_color %>;
    border: none;
}

/* Style the audio controls */
audio::-webkit-media-controls-panel,
audio::-webkit-media-controls-play-button,
audio::-webkit-media-controls-pause-button,
audio::-webkit-media-controls-mute-button,
audio::-webkit-media-controls-volume-slider,
audio::-webkit-media-controls-current-time-display,
audio::-webkit-media-controls-time-remaining-display {
    color: <%= Setting.text_color %>;
}