html, body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
}

body {
    background-image: url(<%= asset_path('korg.jpg') %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    font-family: "PT Sans", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

main {
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 0 !important;
    padding-right: 0 !important;
    padding-bottom: 8rem;
}

a {
    color: <%= Setting.links_color %>;
    text-decoration: none !important;
}

header {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 1rem;
    height: 3rem;
}

.main-header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 3rem;
    background-color: <%= Setting.main_menu_bg_color %>;
    top: 0;
    left: 0;
    padding: 0;
    margin: 0;
    z-index: 1000;
}

.artist-title a {
    font-size: 1.5rem;
    font-weight: bold;
    color: <%= Setting.artist_title_color %>;
    padding-left: 1rem;
}

.releases-container {
    margin-top: 1rem;
    width: 90%;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 5px;
    display: grid;
    row-gap: 1rem;
    column-gap: 1rem;
    border-right: solid 3px <%= Setting.accent_color %>;
    grid-template-columns: repeat(auto-fill, minmax(15rem, 1fr));
    grid-auto-flow: dense;
}

.releases-container img:hover {
    -webkit-filter: brightness(1.2);
}

.releases-container a {
    color: <%= Setting.links_color %>;
}

.cover {
    width: 15rem;
    height: 15rem;
}

#footer {
    background-color: <%= Setting.footer_bg_color %>;
    margin-top: auto;
    height: 2rem;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding-left: 1rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    font-size: 0.8rem;
}

#player {
    width: 100%;
    background-color: <%= Setting.player_bg_color %>;
    padding: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 1rem;
    position: fixed;
    bottom: 2rem;
    left: 0;
    z-index: 1000;
}

