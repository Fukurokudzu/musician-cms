body {
    background-image: url(<%= asset_path('korg.jpg') %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
}

main {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 0 !important;
    padding-right: 0 !important;
}

a {
    color: <%= Setting.links_color %>;
    text-decoration: none !important;
}

.main-header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 3rem;
    background-color: <%= Setting.main_menu_bg_color %>;
    top: 0;
    left: 0;
    z-index: 1000;
}

.artist-title a {
    font-size: 1.5rem;
    font-weight: bold;
    color: <%= Setting.artist_title_color %>;
}

.releases-container {
    margin-top: 1rem;
    width: 90%;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 5px;
    display: grid;
    row-gap: 1rem;
    column-gap: 1rem;
    grid-template-columns: repeat(4, minmax(15rem, 1fr));
    grid-auto-flow: dense;
    border-right: solid 3px #d35400;
}

.cover {
    width: 15rem;
    height: 15rem;
}
