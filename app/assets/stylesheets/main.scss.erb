html, body {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
}

body {
    background-image: url(<%= asset_path('korg.jpg') %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    font-family: "PT Sans", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

main {
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 0 !important;
    padding-right: 0 !important;
    padding-bottom: 8rem;
}

a {
    color: var(--a-color);
    text-decoration: none;
}

a:hover {
    color: var(--a-hover-color);
    text-decoration: underline;
}

header {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 1rem;
    height: 3rem;
}

.main-header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 3rem;
    background-color: var(--main-menu-bg-color);
    top: 0;
    left: 0;
    padding: 0;
    margin: 0;
    z-index: 1000;
}

.artist-title a {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--artist-title-color);
    padding-left: 1rem;
    text-decoration: none;
}

.releases-container {
    margin-top: 1rem;
    width: 90%;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 5px;
    display: grid;
    row-gap: 1rem;
    column-gap: 1rem;
    border-right: solid 3px var(--accent-color);
    grid-template-columns: repeat(auto-fill, minmax(15rem, 1fr));
    grid-auto-flow: dense;
}

.release-container a {
    color: var(--a-color);
    text-decoration: none;
}

.release-container a:hover {
    color: var(--a-hover-color);
    text-decoration: underline;
}

.main-artist-title {
    grid-column: 1 / -1;
    color: var(--a-color);
    text-decoration: none;
}

.main-artist-title:hover {
    color: var(--a-hover-color);
}

.releases-container img:hover {
    -webkit-filter: brightness(1.2);
}

.cover {
    width: 15rem;
    height: 15rem;
}

#footer {
    background-color: var(--footer-bg-color);
    margin-top: auto;
    height: 2rem;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding-left: 1rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    font-size: 0.8rem;
}

.hidden {
    display: none !important;
}

.play-sign {
    display: none;
    margin-right: 0.2rem;
}

.play-sign.active {
    display: inline;
    &::before {
        font-family: "Font Awesome 5 Free";
        content: "\f144";
        color: var(--accent-color);
        font-weight: 900;
    }
}

@media (max-width: 500px) {
    main {
        padding-bottom: 11rem;
    }

    .releases-container {
        justify-content: center;
    }
}
