body {
    background-image: url(<%= asset_path('korg.jpg') %>);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
}

main {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 0 !important;
    padding-right: 0 !important;
}

.main-header {
    display: block;
    width: 100%;
    height: 3rem;
    background-color: #f8f9fa;
    top: 0;
    left: 0;
    z-index: 1000;
}

.releases-container {
    margin-top: 1rem;
    width: 90%;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 5px;
    display: grid;
    row-gap: 1rem;
    grid-template-columns: repeat(auto-fill, minmax(15rem, 5fr));
}

.cover {
    width: 15rem;
    height: 15rem;
}
