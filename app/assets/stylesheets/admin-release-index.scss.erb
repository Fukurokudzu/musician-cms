.admin-release {
  padding: 1rem;
  display: grid;
  gap: 1rem;
  grid-template-columns: 10rem 1fr;
  grid-template-areas:
    "cover title"
    "cover stats";
}

.admin-release .release-cover {
  width: 10rem;
  height: 10rem;
  grid-area: cover;
}

.admin-release .release-title {
  grid-area: title;
  font-weight: bold;
  font-size: 1.4rem;
}

.admin-release .admin-release-stats {
  grid-area: stats;
}