.artist-show-container {
  margin-top: 1rem;
  width: 90%;
  padding: 1rem;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 5px;
  color: var(--text-color);
  border-right: solid 3px var(--accent-color);
}

blockquote {
  font-style: italic;
  font-size: 1rem;
  margin: 1rem 0;
  border-left: solid 3px var(--text-color);
  padding-left: 1rem;
}

.artist-show-container a {
  color: var(--a-color);
}
